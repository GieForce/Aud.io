<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.PartyViewController">
    <children>
        <ImageView pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/background.png"/>
            </image>
        </ImageView>
        <VBox alignment="CENTER" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets right="20.0" top="10.0"/>
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" minWidth="600.0">
                            <children>
                                <VBox alignment="TOP_RIGHT"
                                      style="-fx-border-color: white; -fx-background-radius: 50 50 50 50; -fx-border-radius: 50 50 50 50;">
                                    <HBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="60.0"/>
                                    </HBox.margin>
                                    <children>
                                        <HBox alignment="CENTER_RIGHT">
                                            <children>
                                                <Button fx:id="btnAddSong" mnemonicParsing="false" onAction="#AddSongs"
                                                        style="-fx-background-color: #34454d; -fx-background-radius: 50 50 50 50; -fx-border-radius: 50 50 50 50;"
                                                        text="Add songs" textFill="#f5e9be">
                                                    <font>
                                                        <Font size="18.0"/>
                                                    </font>
                                                    <HBox.margin>
                                                        <Insets bottom="15.0" left="5.0" right="5.0" top="5.0"/>
                                                    </HBox.margin>
                                                </Button>
                                            </children>
                                        </HBox>
                                        <!--TODO: Reuse this with more songs-->
                                        <HBox fx:id="hboxSong" alignment="CENTER_LEFT" minWidth="550.0"
                                              style="-fx-background-color: #34454d; -fx-background-radius: 50 50 50 50;">
                                            <children>
                                                <Button maxHeight="50.0" maxWidth="50.0" minHeight="50.0"
                                                        minWidth="50.0" mnemonicParsing="false" prefHeight="50.0"
                                                        prefWidth="50.0"
                                                        style="-fx-background-color: black; -fx-border-radius: 50 50 50 50; -fx-background-radius: 50 50 50 50;"
                                                        text="▶" textAlignment="CENTER" textFill="#f5e9be"
                                                        wrapText="true">
                                                    <font>
                                                        <Font size="24.0"/>
                                                    </font>
                                                    <padding>
                                                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                                                    </padding>
                                                </Button>
                                                <HBox alignment="CENTER_LEFT">
                                                    <children>
                                                        <VBox>
                                                            <children>
                                                                <Label text="Song name" textFill="#f5e9be">
                                                                    <font>
                                                                        <Font size="24.0"/>
                                                                    </font>
                                                                    <VBox.margin>
                                                                        <Insets left="4.0" right="4.0"/>
                                                                    </VBox.margin>
                                                                </Label>
                                                                <Label text="Artist - Album" textFill="#e8dcb4">
                                                                    <VBox.margin>
                                                                        <Insets left="8.0" right="4.0"/>
                                                                    </VBox.margin>
                                                                </Label>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </HBox>
                                                <HBox alignment="TOP_RIGHT" minWidth="300.0">
                                                    <children>
                                                        <Label alignment="TOP_LEFT" text="Votes" textFill="#f5e9be"
                                                               HBox.hgrow="ALWAYS">
                                                            <font>
                                                                <Font size="22.0"/>
                                                            </font>
                                                            <padding>
                                                                <Insets bottom="5.0" left="5.0" right="5.0"/>
                                                            </padding>
                                                            <HBox.margin>
                                                                <Insets/>
                                                            </HBox.margin>
                                                        </Label>
                                                    </children>
                                                    <padding>
                                                        <Insets right="10.0"/>
                                                    </padding>
                                                </HBox>
                                                <HBox alignment="CENTER_RIGHT" minWidth="50.0">
                                                    <children>
                                                        <VBox>
                                                            <children>
                                                                <Button fx:id="btnUp" minHeight="27.0" minWidth="27.0"
                                                                        mnemonicParsing="false" onAction="#VoteUp"
                                                                        style="-fx-background-color: black; -fx-border-radius: 50 50 50 50; -fx-background-radius: 50 50 50 50;"
                                                                        text="▲" textFill="#f5e9be">
                                                                    <padding>
                                                                        <Insets bottom="5.0" left="5.0" right="5.0"
                                                                                top="5.0"/>
                                                                    </padding>
                                                                    <VBox.margin>
                                                                        <Insets bottom="5.0"/>
                                                                    </VBox.margin>
                                                                </Button>
                                                                <Button fx:id="btnDown" minHeight="27.0" minWidth="27.0"
                                                                        mnemonicParsing="false" onAction="#VoteDown"
                                                                        style="-fx-background-color: black; -fx-border-radius: 50 50 50 50; -fx-background-radius: 50 50 50 50;"
                                                                        text="▼" textFill="#f5e9be">
                                                                    <padding>
                                                                        <Insets bottom="5.0" left="5.0" right="5.0"
                                                                                top="5.0"/>
                                                                    </padding>
                                                                </Button>
                                                            </children>
                                                        </VBox>
                                                        <Button fx:id="btnSkip" minHeight="45.0" minWidth="45.0"
                                                                mnemonicParsing="false" onAction="#VoteSkip"
                                                                style="-fx-background-color: black; -fx-background-radius: 50 50 50 50; -fx-border-radius: 50 50 50 50;">
                                                            <graphic>
                                                                <ImageView fitHeight="20.0" fitWidth="20.0"
                                                                           pickOnBounds="true" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../img/fastforward.png"/>
                                                                    </image>
                                                                </ImageView>
                                                            </graphic>
                                                            <padding>
                                                                <Insets left="5.0" right="5.0"/>
                                                            </padding>
                                                            <HBox.margin>
                                                                <Insets left="10.0"/>
                                                            </HBox.margin>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                            </children>
                                            <VBox.margin>
                                                <Insets/>
                                            </VBox.margin>
                                            <padding>
                                                <Insets bottom="6.0" left="6.0" right="6.0" top="6.0"/>
                                            </padding>
                                        </HBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                            </children>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </HBox>
                        <HBox alignment="TOP_RIGHT">
                            <children>
                                <VBox alignment="CENTER">
                                    <children>
                                        <ImageView fitHeight="125.0" fitWidth="125.0" nodeOrientation="INHERIT"
                                                   pickOnBounds="true" preserveRatio="true">
                                            <VBox.margin>
                                                <Insets bottom="10.0" top="10.0"/>
                                            </VBox.margin>
                                            <image>
                                                <Image url="@../img/Logo.png"/>
                                            </image>
                                        </ImageView>
                                        <Separator opacity="0.5" prefWidth="200.0" style="-fx-background-color: black;">
                                            <VBox.margin>
                                                <Insets bottom="10.0"/>
                                            </VBox.margin>
                                        </Separator>
                                        <HBox alignment="CENTER">
                                            <children>
                                                <Label fx:id="lbPartyName" text="Party Name" textFill="#f5e9be">
                                                    <font>
                                                        <Font size="44.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_RIGHT">
                                            <children>
                                                <VBox alignment="CENTER_RIGHT">
                                                    <children>
                                                        <TextArea fx:id="taChat" editable="false" prefHeight="375.0"
                                                                  prefWidth="400.0">
                                                            <font>
                                                                <Font size="14.0"/>
                                                            </font>
                                                        </TextArea>
                                                        <HBox alignment="CENTER">
                                                            <children>
                                                                <TextField fx:id="tbMessage" minWidth="280.0"
                                                                           onKeyPressed="#EnterPressed"
                                                                           prefWidth="280.0" promptText="Message"
                                                                           style="-fx-background-radius: 50 50 50 50; -fx-border-radius: 50 50 50 50;">
                                                                    <font>
                                                                        <Font size="18.0"/>
                                                                    </font>
                                                                    <HBox.margin>
                                                                        <Insets right="10.0"/>
                                                                    </HBox.margin>
                                                                </TextField>
                                                                <Button fx:id="btnSend" mnemonicParsing="false"
                                                                        onAction="#SendMessage"
                                                                        style="-fx-border-radius: 50 50 50 50; -fx-background-radius: 50 50 50 50; -fx-background-color: #be4248;"
                                                                        text="Send" textFill="#f5e9be">
                                                                    <font>
                                                                        <Font size="24.0"/>
                                                                    </font>
                                                                    <padding>
                                                                        <Insets left="20.0" right="20.0"/>
                                                                    </padding>
                                                                </Button>
                                                            </children>
                                                            <padding>
                                                                <Insets top="8.0"/>
                                                            </padding>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
