<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.MenuController">
    <children>
        <ImageView pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/background.png" />
            </image>
        </ImageView>
        <VBox alignment="CENTER" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="10.0" />
                </padding>
                <VBox alignment="CENTER">
                    <ImageView fitHeight="125.0" fitWidth="125.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0" />
                        </VBox.margin>
                        <Image url="@../img/Logo.png" />
                    </ImageView>
                    <Separator opacity="0.5" prefWidth="200.0" style="-fx-background-color: black;">
                        <VBox.margin>
                            <Insets bottom="10.0" left="-150.0" right="-150.0" />
                        </VBox.margin>
                    </Separator>
                    <HBox alignment="CENTER" />
                    <HBox alignment="CENTER">
                        <padding>
                            <Insets top="80.0" />
                        </padding>
                        <VBox alignment="CENTER">
                            <children>
                        <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#createParty" style="-fx-border-radius: 50 50 50 50; -fx-background-radius: 50 50 50 50; -fx-background-color: #f5e9be;" text="Create party" textFill="#50626a">
                           <font>
                              <Font size="36.0" />
                           </font>
                           <padding>
                              <Insets left="50.0" right="50.0" />
                           </padding>
                           <VBox.margin>
                              <Insets right="50.0" />
                           </VBox.margin>
                        </Button>
                                <Button fx:id="btnJoin" mnemonicParsing="false" onAction="#joinParty" style="-fx-border-radius: 50 50 50 50; -fx-background-radius: 50 50 50 50; -fx-background-color: #be4248;" text="Join party" textFill="#f5e9be">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                    <padding>
                                        <Insets left="50.0" right="50.0" />
                                    </padding>
                                    <VBox.margin>
                                        <Insets left="50.0" top="20.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
