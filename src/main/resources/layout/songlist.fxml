<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="500.0" minWidth="800.0" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SongListController">
    <children>
        <ImageView pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/background.png"/>
            </image>
        </ImageView>
        <VBox alignment="CENTER" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <ImageView fitHeight="75.0" fitWidth="75.0" nodeOrientation="INHERIT" pickOnBounds="true"
                           preserveRatio="true">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </VBox.margin>
                    <image>
                        <Image url="@../img/Logo.png"/>
                    </image>
                </ImageView>
                <Separator minWidth="200.0" opacity="0.5" style="-fx-background-color: black;">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Separator>
                <HBox alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER_RIGHT">
                            <children>
                                <HBox>
                                    <children>
                                        <Label fx:id="lbPartyName" text="Song name" textFill="#f5e9be">
                                            <font>
                                                <Font size="22.0"/>
                                            </font>
                                            <HBox.margin>
                                                <Insets left="10.0"/>
                                            </HBox.margin>
                                        </Label>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER">
                                    <children>
                                        <TextField fx:id="tbSongName" minWidth="280.0" onKeyPressed="#EnterPressed"
                                                   prefWidth="280.0" promptText="Name"
                                                   style="-fx-background-radius: 50 50 50 50; -fx-border-radius: 50 50 50 50;">
                                            <font>
                                                <Font size="18.0"/>
                                            </font>
                                            <HBox.margin>
                                                <Insets right="10.0"/>
                                            </HBox.margin>
                                        </TextField>
                                        <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#SearchSong"
                                                style="-fx-border-radius: 50 50 50 50; -fx-background-radius: 50 50 50 50; -fx-background-color: #be4248;"
                                                text="Search" textFill="#f5e9be">
                                            <font>
                                                <Font size="24.0"/>
                                            </font>
                                            <padding>
                                                <Insets left="20.0" right="20.0"/>
                                            </padding>
                                        </Button>
                                    </children>
                                    <padding>
                                        <Insets top="8.0"/>
                                    </padding>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets right="20.0" top="10.0"/>
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" minWidth="200.0">
                            <children>
                                <VBox fx:id="songContainer" alignment="TOP_RIGHT" minHeight="280.0"
                                      style="-fx-border-color: white; -fx-background-radius: 50 50 50 50; -fx-border-radius: 50 50 50 50;">
                                    <HBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                                    </HBox.margin>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                            </children>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
